<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@color/corStatusBar</item>
        <item name="android:backgroundDimAmount">0.0</item>
    </style>

    <style name="materialButton">
        <item name="android:letterSpacing">0</item>
        <item name="textAllCaps">false</item>
        <item name="colorControlHighlight">?colorControlHighlight</item>
        <item name="fontFamily">sans-serif-black</item>
    </style>

    <style name="textAppearanceBarra" parent="TextAppearance.AppCompat.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="topFabButton" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="tint">#fff</item>
        <item name="backgroundTint">@color/colorPrimary</item>
    </style>

    <style name="topToolbar" parent="@style/Widget.MaterialComponents.Toolbar.PrimarySurface">
        <item name="android:background">#000</item>
        <item name="elevation">0dp</item>
        <item name="android:elevation">0dp</item>
        <item name="colorControlNormal">?colorControlNormal</item>
    </style>

    <style name="bottomFabButton" parent="@style/Widget.MaterialComponents.FloatingActionButton">
        <item name="backgroundTint">#fff</item>
    </style>

</resources>