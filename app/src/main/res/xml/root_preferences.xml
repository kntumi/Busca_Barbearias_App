            app:icon="@drawable/info"
            android:summary="Iniciou a sessao pelas 19:30 de 24 de Agosto de 2022"
            app:useSimpleSummaryProvider="true" />

        <Preference
            app:key="sync"
            app:icon="@drawable/terminar_sessao"
            app:title="Terminar a sessão actual" />

    </PreferenceCategory>

</PreferenceScreen>