<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory app:title="@string/account_header">

        <Preference
            app:key="signature"
            app:title="@string/email_title"
            app:icon="@drawable/mail"
            app:summary="ntumi73@gmail.com" />

        <Preference
            app:key="signature"
            app:title="@string/pass_title"
            app:icon="@drawable/lock"
            app:summary="Alterada em 20 de Outubro de 2021, as 18:37" />

        <Preference
            app:key="attachment"
            app:title="Apagar esta conta"
            app:icon="@drawable/apagar_conta"/>

